@model EcoSistemas.Models.PacienteModel
@{
    ViewData["Title"] = "Paciente";
}
<div class="alert alert-primary" role="alert">
    @ViewBag.msg
</div>
<div class="alert alert-dark" role="alert">
    @ViewBag.proxima
</div>
<div class="text-center">
    <h1 class="display-4">API de Pacientes</h1>
</div>
<div class="box-content">
    <form method="post" action="~/Paciente/EditPaciente">
        <div class="span12">
            <div class="span6">
                <label class="control-label" for="usu_nome">Nome:</label>
                <div class="editor-field">
                    <input type="text" name="usu_nome" id="usu_nome" value="@ViewBag.usu_nome" />
                </div>
            </div>
            <div class="span6">
                <label class="control-label" for="email">E-mail:</label>
                <div class="editor-field">
                    <input type="text" name="email" id="email" value="@ViewBag.email" />
                </div>
            </div>
            <div class="span6">
                <label class="control-label" for="telefone">Telefone:</label>
                <div class="editor-field">
                    <input type="text" name="telefone" id="telefone" value="@ViewBag.telefone" />
                </div>
            </div>
            <br />
            <div class="span2">
                <input type="submit" value="Salvar" class="btn btn-primary " />
            </div>
        </div>
    </form>
</div>